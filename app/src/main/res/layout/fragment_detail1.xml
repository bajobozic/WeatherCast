<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bozic.bajo.weathercast.DetailActivity.DetailFragment"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right"
        android:background="@color/list_background">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/shower_rain"
            android:background="@color/list_background"
            android:cropToPadding="false" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewShortDesc"
            android:gravity="center_horizontal"
            android:text="ShowerRain"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/list_temperature_color"
            android:textStyle="normal"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            android:gravity="center_horizontal"
            android:text="Mon, 24 june"
            android:layout_marginBottom="10dp"
            android:textColor="@color/list_temperature_color"
            android:textStyle="normal"
            android:textSize="25dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min:"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"
                android:elegantTextHeight="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:id="@+id/textViewMin"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max:"
                android:layout_weight="1"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:id="@+id/textViewMax"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure:"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="996.59"
                android:id="@+id/textViewPressure"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity:"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="61"
                android:id="@+id/textViewHumidity"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WindSpeed:"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="61"
                android:id="@+id/textViewWindSpeed"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WindDirection:"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NW"
                android:id="@+id/textViewWindDirection"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:textColor="@color/list_temperature_color"
                android:textStyle="normal"
                android:textSize="25dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
